{% extends '_reusable/base.html.twig' %}

{% block title %}{% trans %}profile.title{% endtrans %}{% endblock %}

{% block body %}
<div class="container">
  <h1 class="title is-size-3">{{ block('title') }}</h1>
  {{ form_start(form) }}
    {{ form_widget(form) }}

    <div class="field">
      <div class="control has-text-right">
        <button class="button is-success" type="submit">{% trans %}form.save{% endtrans %}</button>
      </div>
    </div>
  {{ form_end(form) }}

  <h2 class="title is-size-4">{{ 'auth.mfa.title'|trans }}</h2>
  {{ component('auth:mfa', {user: user}) }}
</div>
{% endblock %}
