{% block book_ownership_created_private %}
<turbo-stream action="append" targets="{{ selector }}">
  <template>{%- include "books/_card/private_card.html.twig" -%}</template>
</turbo-stream>
{% endblock %}

{% block book_ownership_created_public %}
<turbo-stream action="append" targets="{{ selector }}">
  <template>{%- include "books/_card/public_card.html.twig" -%}</template>
</turbo-stream>
{% endblock %}

{% block book_ownership_updated %}
{{ block('book_ownership_deleted') }}
<turbo-stream action="append" targets="{{ newSelector }}">
  <template>{%- include "books/_card/private_card.html.twig" -%}</template>
</turbo-stream>
{% endblock %}

{% block book_ownership_deleted %}
<turbo-stream action="remove" targets=".{{ privateClass }} > #{{ id }}"></turbo-stream>
{% endblock %}

{% block book_updated %}
<turbo-stream action="update" target="{{ id }}">
  <template>{{ include('books/_card/card_content.html.twig') }}</template>
</turbo-stream>
{% endblock %}

{% block book_deleted %}
<turbo-stream action="remove" target="{{ id }}"></turbo-stream>
{% endblock %}
